package initialParameter_02;

import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.ServletConfig;
import jakarta.servlet.annotation.WebInitParam;

@WebServlet(urlPatterns = "/initialParameter", initParams = {
	@WebInitParam(name = "initParam", value = "hello"),
	@WebInitParam(name = "name", value = "henry"),
})
public class InitialParameterServlet extends HttpServlet {
	private String initParam;
	private String name;
	
	@Override
	public void init(ServletConfig config) {
		initParam = config.getInitParameter("initParam");
		name = config.getInitParameter(name);
	}
}
